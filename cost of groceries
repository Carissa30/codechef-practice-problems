#include <iostream>
using namespace std;

int main() {
	int t,n,x;
	cin >> t;
	while(t--)
	{
	    int sum=0;
	    cin >> n >> x;
	    int a[n],b[n];
	    for(int i=0;i<n;i++)
	    {
	        cin >> a[i];
	    }
	    for(int j=0;j<n;j++)
	    {
	        cin >> b[j];
	    }
	    for(int j=0;j<n;j++)
	    {
	        if(a[j]>=x)
	        {
	            sum+=b[j];
	        }
	    }
	    cout << sum << endl;
	    
	}
	return 0;
}
